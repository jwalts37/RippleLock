<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
    </style>
    <style name="Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Widget.Button.Transparent">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="textAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="textAppearance.verySmall">
        <item name="android:textSize">15dp</item>
    </style>
    <style name="textAppearance.small">
        <item name="android:textSize">22dp</item>
    </style>
    <style name="textAppearance.medium">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="textAppearance.big">
        <item name="android:textSize">30dp</item>
    </style>
    <style name="textAppearance.veryBig">
        <item name="android:textSize">35dp</item>
    </style>
</resources>
